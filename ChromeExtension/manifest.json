{
    "manifest_version": 3,
    "name": "Comments Extension",
    "description":  "Sort and filter YouTube comments",
    "version": "1.0.0",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_title": "Change comment",
        "default_popup": "popup.html",
        "default_icon": {}
    },
    "icons": {
        "16": "youtube16.png",
        "32": "youtube32.png",
        "48": "youtube48.png",
        "128": "youtube128.png"
    }
}