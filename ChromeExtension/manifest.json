{
    "manifest_version": 3,
    "name": "Comments Extension",
    "description":  "Sort and filter YouTube comments",
    "version": "1.0.2",

    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*",
                "http://www.youtube.com/*"
            ],
            "js": ["content.js"]
        }
    ],

    "background": {
        "service_worker": "background.js"
    },
    
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"

    ],
    
    "host_permissions": [
        "http://*.youtube.com/*"
    ],
    
    "action": {
        "default_title": "Change comment",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/youtube16.png",
            "32": "/youtube32.png",
            "48": "/youtube48.png",
            "128": "/youtube128.png"
        }
    },

    "icons": {
        "16": "/youtube16.png",
        "32": "/youtube32.png",
        "48": "/youtube48.png",
        "128": "/youtube128.png"
    }
}